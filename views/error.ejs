
<% layout("layouts/boilerplate")%>
<div class="row pb-5">
  <div class="col-sm-6 offset-3 mt-5">
    <h1 class="offset-2">GitHub Profile Finder</h1>
    <br />
    <form action="/" method="post">
          <div class="row">
            <div class="col-sm-8 offset-1">
              <input
                type="text"
                id="username"
                class="form-control"
                placeholder="type username"
                name="username"
                required
              />
            </div>
            <div class="col-sm-3">
              <button type="submit" class="btn btn-success">Find</button>
            </div>
          </div>
          <br />
        </form>
    <br />
  </div>
  <div class="col-sm-6 offset-3 mt-4 card-con">
    <div class="card mx-auto shadow-lg p-4 pb-2 border border-0">
      <img src="/wrong.png" class="img-fluid mx-auto" />
      <h3 class="text-center py-2"><b>Profile Not Found </b></h3>
      
      <a class="text-center mb-2" href="https://github-profile-finder-jf98.onrender.com/"
        ><span class="btn bg-success text-light rounded-3 py-2 px-3"
          >Home Page &rarr;</span
        ></a
      >
    </div>
  </div>
</div>
